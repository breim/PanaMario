<div class="container">
	<div class="row">
		<div class="col-lg-12 col-md-12">
			<legend>Registro</legend>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

				<div class="form-group">
				  <%= f.label :empresa %><br />
				  <%= f.text_field :company, autofocus: true,:class => "form-control required" %>
				</div>

				<div class="form-group">
				  <%= f.label :ruc %><br />
				  <%= f.text_field :ruc,:class => "form-control required" %>
				</div>

				<div class="form-group">
					<label>Ciudade</label>
					<%= f.collection_select :city_id, City.all, :id, :city, prompt: true,:class=> "required" %>
				</div>

				<div class="form-group">
				  <%= f.label :email %><br />
				  <%= f.email_field :email,:class => "form-control required" %>
				</div>

			  	<div class="form-group">
				  	<%= f.label :contraseña %><br />
					<%= f.password_field :password, autocomplete: "off",:class => "form-control required" %>
			    </div>

			  	<div class="form-group">
				  	<%= f.label :confirmación_de_la_contraseña %><br />
				    <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control required" %>
			    </div>

			  	<div class="form-group">
			  		<%= f.submit "Registrarse",:class => "btn btn-primary btn-lg btn-block" %>
			  	</div>

			<% end %>
			<%= render "users/shared/links" %>
		</div>
	</div>
</div>
<script> 
  $("#new_user").validate();
</script>
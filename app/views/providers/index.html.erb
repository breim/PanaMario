<%= render 'layouts/menu_lateral_user' %>
<legend>Productos</legend>

<% if notice.present? %>
    <div class="alert alert-success">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
<% end %>
<br>

<%= link_to 'Crear nuevo producto', new_provider_path,:class => "btn btn-success btn-block" %>

<br>
<br>
<legend>Mis productos</legend>
<table class="table">
  <thead>
    <tr>
      <th>Productos</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.product.name %></td>
        <td><%= provider.quantidade %></td>
        <td><%= provider.price %></td>
        <td><%= link_to 'Editar', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destruir', provider, method: :delete, data: { confirm: 'EstÃ¡s seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= render 'layouts/footer_user' %>